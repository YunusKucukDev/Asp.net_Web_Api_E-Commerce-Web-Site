@using Udemy.DtoLayer.CatalogDtos.CategoryDtos
@model List<ResultCategoryDto>

<style>
    .category-card {
        height: 260px; /* KRİTİK */
        display: flex;
        flex-direction: column;
    }

        .category-card .image-wrapper {
            height: 110px;
            overflow: hidden;
        }

            .category-card .image-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .category-card .card-body {
            padding: 0.5rem;
            flex: 1; /* İçeriği dengeler */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
</style>

<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Categories</span>
    </h2>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 px-xl-5 pb-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card category-card text-center my-2">

                    <div class="image-wrapper">
                        <img src="@item.ImageUrl" alt="@item.CategoryName" />
                    </div>

                    <div class="card-body">
                        <div>
                            <h6 class="card-title">@item.CategoryName</h6>
                            <p class="card-text text-muted">100 Products</p>
                        </div>

                        <a href="#" class="btn btn-warning btn-sm">
                            View
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>

</div>
<!-- Categories End -->
