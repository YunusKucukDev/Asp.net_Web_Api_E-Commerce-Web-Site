@using Udemy.DtoLayer.CommnetDtos

@model UpdateCommentDto

@{
	ViewData["Title"] = "UpdateComment";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-3"></div> @*Ortalamak İçin*@
		<div class="col-md-6 ">
			<div class="chart-box">
				<h4 class="mb-3 text-center">Kategori İsmini Güncelle</h4>
				<form asp-action="UpdateComment" method="post">
					<input type="hidden" class="form-control" asp-for="UserCommentId">
					<input type="hidden" class="form-control" asp-for="ProductId">
		
					<div class="form-group">
						<label>Kullanıcı Adı Soyadı</label>
						<input type="text" class="form-control" asp-for="NameSurname">
					</div>
					<div class="form-group">
						<label>Kullanıcı Görsel</label>
						<input type="text" class="form-control" asp-for="ImageUrl">
					</div>
					<div class="form-group">
						<label>Kullanıcı Email</label>
						<input type="text" class="form-control" asp-for="Email">
					</div>
					<div class="form-group">
						<label>Kullanıcı Rating</label>
						<input type="number" class="form-control" asp-for="Rating">
					</div>
					<div class="form-group">
						<label>Kullanıcı Yorum Tarihi</label>
						<input type="date" class="form-control" asp-for="CreatedDate">
					</div>
					<div class="form-group">
						<label> Yorum </label>
						<textarea style="resize: none;" asp-for="CommentDetail" class="form-control" rows="3"></textarea>
					</div>
					<button type="submit" class="btn btn-success btn-rounded">Düzenle</button>
				</form>
			</div>
			<div class="col-md-3 "></div> @*Ortalamak İçin*@
		</div>
	</div>
</section>


