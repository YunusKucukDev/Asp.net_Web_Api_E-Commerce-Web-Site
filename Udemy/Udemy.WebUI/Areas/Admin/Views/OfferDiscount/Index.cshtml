@using Udemy.DtoLayer.CatalogDtos.OfferDiscountDto
@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Offer Dİscount Listesi</h4>
                <p>Offer Discount ile ilgili işlemlerinizi AŞağıdaki tablo üzerinden düzenleyebilirsiniz</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Offer Discount Başlığı</th>
                                <th>Offer Discount alt Başlığı</th>
                                <th>Offer Discount Resim URL</th>
                                <th>Offer Discount Buton Yazısı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td>@item.ButtonTitle</td>
                                    <td>
                                        @(string.IsNullOrWhiteSpace(item.ImageUrl) ? "Resim Yok" : "Resim Var")
                                    </td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount" class="btn btn-primary">Yeni Offer Discount Girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>

