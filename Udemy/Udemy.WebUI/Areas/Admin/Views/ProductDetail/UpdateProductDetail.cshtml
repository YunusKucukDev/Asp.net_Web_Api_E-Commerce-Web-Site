@using Udemy.DtoLayer.CatalogDtos.ProductDetailDtos
@model UpdateProductDetailDto

@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-3"></div> @*Ortalamak İçin*@
		<div class="col-md-6 ">
			<div class="chart-box">
				<h4 class="mb-3 text-center">Ürün Açıklama ve Bilgi Güncelleme Sayfası</h4>
				<form method="post">
					<input type="hidden" class="form-control" asp-for="ProductDetailId">
					<input type="hidden" class="form-control" asp-for="ProductId">
					<div class="form-group">
						<label>Ürün Açıklaması</label>
						<textarea rows="5" class="form-control" asp-for="ProductDesciption"></textarea>
					</div>
					<div class="form-group">
						<label>Ürün Bilgisi</label>
						<textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
					</div>
					
					<button type="submit" class="btn btn-success btn-rounded">Düzenle</button>
				</form>
			</div>
			<div class="col-md-3 "></div> @*Ortalamak İçin*@
		</div>
	</div>
</section>


