@using Udemy.DtoLayer.CatalogDtos.AboutDtos
@model CreateAboutDto

@{
    ViewData["Title"] = "Create About";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Hakkımızda Ekleme sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Hakkımızda Açıklaması</label>
                        <input type="text" class="form-control" asp-for="Descrition" />
                        <br />
                        <label>Hakkımızda Adres Bilgisi</label>
                        <input type="text" class="form-control" asp-for="Address" />
                        <br />
                        <label>Hakkımızda Telefon Bilgisi</label>
                        <input type="text" class="form-control" asp-for="Phone" />
                        <br />
                        <label>Hakkımızda Email Bilgisi</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <button class="btn btn-primary">Hakkımızda Ekle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

