@using Udemy.DtoLayer.CatalogDtos.AboutDtos
@model UpdateAboutDto

@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-3"></div> @*Ortalamak İçin*@
		<div class="col-md-6 ">
			<div class="chart-box">
				<h4 class="mb-3 text-center">Hakkımızda Bilgilerini Güncelle</h4>
				<form asp-action="UpdateAbout" method="post">

					<input type="hidden" class="form-control" asp-for="AboutId">
					<div class="form-group">
						<label>Hakkımızda Açıklama</label>
						<input type="text" class="form-control" asp-for="Descrition">
					</div>
					<div class="form-group">
						<label>Hakkımızda Email</label>
						<input type="text" class="form-control" asp-for="Email">
					</div>
					<div class="form-group">
						<label>Hakkımızda Telefon nuamrası</label>
						<input type="text" class="form-control" asp-for="Phone">
					</div>
					<div class="form-group">
						<label>Hakkımızda adres Bilgisi</label>
						<input type="text" class="form-control" asp-for="Address">
					</div>
					<button type="submit" class="btn btn-success btn-rounded">Düzenle</button>
				</form>
			</div>
			<div class="col-md-3 "></div> @*Ortalamak İçin*@
		</div>
	</div>
</section>


