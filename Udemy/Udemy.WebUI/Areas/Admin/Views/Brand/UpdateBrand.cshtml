@using Udemy.DtoLayer.CatalogDtos.BrandDto
@model UpdateBrandDto

@{
	ViewData["Title"] = "UpdateBrand";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-3"></div> @*Ortalamak İçin*@
		<div class="col-md-6 ">
			<div class="chart-box">
				<h4 class="mb-3 text-center">Marka İsmini Güncelle</h4>
				<form asp-action="UpdateBrand" method="post">

					<input type="hidden" class="form-control" asp-for="BrandId">
					<div class="form-group">
						<label>Marka İsmi</label>
						<input type="text" class="form-control" asp-for="BrandName">
					</div>
					<div class="form-group">
						<label>Marka Resim URL</label>
						<input type="text" class="form-control" asp-for="ImageUrl">
					</div>
					<button type="submit" class="btn btn-success btn-rounded">Düzenle</button>
				</form>
			</div>
			<div class="col-md-3 "></div> @*Ortalamak İçin*@
		</div>
	</div>
</section>


