@using Udemy.DtoLayer.CatalogDtos.CategoryDtos
@using Udemy.DtoLayer.CatalogDtos.GeneralSpecialOfferDto
@model List<ResultGeneralSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Genel Fırsat Kuponları Listesi</h4>
                <p>Genel Fırsat Kuponları ile ilgili işlemlerinizi AŞağıdaki tablo üzerinden düzenleyebilirsiniz</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Alt Başlık</th>
                                <th>id</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td>@item.SpecialOfferId</td>
                                    <td><a href="/Admin/GeneralSpecialOffer/DeleteGeneralSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">Sil</a></td>
                                    <td>
                                        <a asp-area="Admin"
                                           asp-controller="GeneralSpecialOffer"
                                           asp-action="UpdateGeneralSpecialOffer"
                                           asp-route-id="@item.SpecialOfferId"
                                           class="btn btn-success">
                                            Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/GeneralSpecialOffer/CreateGeneralSpecialOffer" class="btn btn-primary">Kod Ekle</a>
                </div>
            </div>
        </div>

    </div>
</section>

