@model UpdateGeneralSpecialOfferDto
@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-3"></div> @*Ortalamak İçin*@
		<div class="col-md-6 ">
			<div class="chart-box">
				<h4 class="mb-3 text-center">Genel İndirim Kodunu Güncelle</h4>
				<form method="post">

					<input type="hidden" class="form-control" asp-for="SpecialOfferId">

					<div class="form-group">
						<label>Kupon İsmi</label>
						<input type="text" class="form-control" asp-for="Title">
					</div>
					<div class="form-group">
						<label>Kupon Alt Başlığı </label>
						<input type="text" class="form-control" asp-for="Subtitle">
					</div>
					<div class="form-group">
						<label>Resim URL</label>
						<input type="text" class="form-control" asp-for="ImageUrl">
					</div>
					<button type="submit" class="btn btn-success btn-rounded">Düzenle</button>
				</form>
			</div>
			<div class="col-md-3 "></div> @*Ortalamak İçin*@
		</div>
	</div>
</section>


