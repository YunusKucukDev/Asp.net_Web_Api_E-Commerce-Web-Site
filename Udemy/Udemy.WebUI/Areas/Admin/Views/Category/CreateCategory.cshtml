@using Udemy.DtoLayer.CatalogDtos.CategoryDtos
@model CreateCategoryDto

@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekleme sayfası</h4>
				<br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName"/> 
                        <br />
                        <label>Kategori Resim URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl"/> 
                        <br />
                        <button class="btn btn-primary">Kategoriyi Ekle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

