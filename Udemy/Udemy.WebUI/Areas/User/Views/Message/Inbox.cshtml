@using Udemy.DtoLayer.MessagesDtos
@model List<ResultInboxDto>
@{
	ViewData["Title"] = "Inbox";
	Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
	int count = 0;
}


<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Striped Table</h4>
						<p class="card-description">
							Add class <code>.table-striped</code>
						</p>
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											#
										</th>
										<th>
											Gönderen
										</th>
										<th>
											Konu
										</th>
										<th>
											Sipariş Tarihi
										</th>
										<th>
											Durum
										</th>
										<th>
											Sil
										</th>
										<th>
											Mesajı Aç
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>
												@count
											</td>
											<td>
												@item.SendedId
											</td>
											<td>
												@item.Subject
											</td>
											<td>
												@DateTime.UtcNow
											</td>
											<td>
												@item.IsRead
											</td>
											<td>
												<a href="#" class="btn btn-danger">Sil</a>
											</td>
											<td>
												<a href="#" class="btn btn-info">Mesajı Aç</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


