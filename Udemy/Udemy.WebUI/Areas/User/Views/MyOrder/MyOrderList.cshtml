@using Udemy.DtoLayer.OrderDtos.OrderingDtos
@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    var count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Striped Table</h4>
                        <p class="card-description">
                            Add class <code>.table-striped</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Toplam Fiyat
                                        </th>
                                        <th>
                                            Sipariş Tarihi
                                        </th>
                                        <th>
                                            Sipariş Detayları
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @item.TotalPrice
                                        </td>
                                        <td>
                                            @item.OrderDate.ToLongDateString()
                                        </td>
                                        <td>
                                           <a href="#" class="btn btn-warning">Sipariş Detayları</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

